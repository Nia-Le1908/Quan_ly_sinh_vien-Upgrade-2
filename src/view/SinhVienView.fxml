<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane stylesheets="@styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.SinhVienController">
   <top>
      <Label styleClass="title-label" text="QUẢN LÝ SINH VIÊN" BorderPane.alignment="CENTER">
         <padding>
            <Insets bottom="10.0" top="10.0" />
         </padding>
      </Label>
   </top>
   <center>
      <VBox spacing="10.0">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <TextField fx:id="tfMaSV" promptText="Mã sinh viên" HBox.hgrow="ALWAYS" />
                  <TextField fx:id="tfHoTen" promptText="Họ tên" HBox.hgrow="ALWAYS" />
                  <DatePicker fx:id="dpNgaySinh" prefWidth="150.0" promptText="Ngày sinh" />
                  <ComboBox fx:id="cbGioiTinh" prefWidth="120.0" promptText="Giới tính" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <TextField fx:id="tfQueQuan" promptText="Quê quán" HBox.hgrow="ALWAYS" />
                  <TextField fx:id="tfKhoa" prefWidth="100.0" promptText="Khóa" />
                  <TextField fx:id="tfLop" prefWidth="120.0" promptText="Lớp" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Button onAction="#themSinhVien" styleClass="button-primary" text="Thêm" />
                  <Button onAction="#suaSinhVien" styleClass="button-success" text="Sửa" />
                  <Button onAction="#xoaSinhVien" styleClass="button-danger" text="Xóa" />
                  <Button onAction="#handleResetPassword" text="Đặt lại Mật khẩu" />
                  <TextField fx:id="tfTimKiem" promptText="Tìm mã hoặc tên sinh viên" HBox.hgrow="ALWAYS" />
                  <Button onAction="#timKiemSinhVien" text="Tìm" />
               </children>
            </HBox>
            <Label fx:id="lblStatus" managed="false" visible="false" />
            <TableView fx:id="tableSV" prefHeight="400.0" prefWidth="600.0" VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="colMaSV" prefWidth="100.0" text="Mã SV" />
                  <TableColumn fx:id="colHoTen" prefWidth="160.0" text="Họ tên" />
                  <TableColumn fx:id="colNgaySinh" prefWidth="120.0" text="Ngày sinh" />
                  <TableColumn fx:id="colGioiTinh" prefWidth="80.0" text="Giới tính" />
                  <TableColumn fx:id="colQueQuan" prefWidth="120.0" text="Quê quán" />
                  <TableColumn fx:id="colKhoa" prefWidth="80.0" text="Khóa" />
                  <TableColumn fx:id="colLop" prefWidth="80.0" text="Lớp" />
                  <TableColumn fx:id="colDiemTichLuy" prefWidth="120.0" text="Điểm Tích Lũy" />
               </columns>
            </TableView>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>
