<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<!-- Sửa lỗi: Thêm Label fx:id="lblStatus" để hiển thị thông báo -->
<BorderPane prefHeight="550.0" prefWidth="800.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MonHocController">
   <top>
      <Label styleClass="main-title" text="QUẢN LÝ MÔN HỌC" BorderPane.alignment="CENTER" />
   </top>
   <center>
      <VBox spacing="10.0">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <HBox spacing="10.0">
               <children>
                  <TextField fx:id="tfMaMon" prefWidth="120.0" promptText="Mã môn học (*)" />
                  <TextField fx:id="tfTenMon" prefWidth="250.0" promptText="Tên môn học (*)" HBox.hgrow="ALWAYS" />
                  <TextField fx:id="tfSoTinChi" prefWidth="80.0" promptText="Số TC (*)" />
                  <TextField fx:id="tfHocKy" prefWidth="80.0" promptText="Học kỳ (*)" />
               </children>
            </HBox>
            <HBox spacing="10.0">
               <children>
                  <ComboBox fx:id="cbLoaiMon" prefWidth="150.0" promptText="Loại môn (*)" />
                  <TextField fx:id="tfMonTienQuyet" prefWidth="200.0" promptText="Môn tiên quyết" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Button onAction="#themMonHoc" text="Thêm" />
                  <Button onAction="#suaMonHoc" text="Sửa" />
                  <Button onAction="#xoaMonHoc" text="Xóa" />
                  <Button onAction="#clearFields" text="Làm mới" />
                  <TextField fx:id="tfTimKiem" prefHeight="25.0" prefWidth="240.0" promptText="Tìm theo mã hoặc tên" HBox.hgrow="ALWAYS" />
                  <Button onAction="#timKiemMonHoc" text="Tìm kiếm" />
               </children>
            </HBox>
            <!-- Label hiển thị thông báo lỗi hoặc thành công -->
            <Label fx:id="lblStatus" managed="false" text="Status Label" VBox.vgrow="NEVER" />
            <TableView fx:id="tableMonHoc" VBox.vgrow="ALWAYS">
               <columns>
                  <TableColumn fx:id="colMaMon" prefWidth="100.0" text="Mã môn" />
                  <TableColumn fx:id="colTenMon" prefWidth="250.0" text="Tên môn" />
                  <TableColumn fx:id="colSoTinChi" prefWidth="70.0" text="Số TC" />
                  <TableColumn fx:id="colHocKy" prefWidth="70.0" text="Học kỳ" />
                  <TableColumn fx:id="colLoaiMon" prefWidth="100.0" text="Loại môn" />
                  <TableColumn fx:id="colMonTienQuyet" prefWidth="120.0" text="Môn tiên quyết" />
               </columns>
            </TableView>
         </children>
      </VBox>
   </center>
</BorderPane>